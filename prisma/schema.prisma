// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id String @id @default(uuid())
  cpf Int 
  name String
  mail String
  password String

  @@map("users")
}

model Customer {
  id_customer String @id @default(uuid())
  cpf Int 
  name String
  state String
  city String
  phone String
  mail String
  
  @@map("customers")
}

model Mechanic {
  id_mechanic String @id @default(uuid())
  cpf Int
  name String
  state String
  city String
  phone String
  mail String

  @@map("mechanics")
}